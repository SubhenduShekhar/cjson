{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.cjson",
    "patterns": [
        {
            "name": "keyword.control.import",
            "match": "\\$import .*\""
        },
        {
            "name": "comment",
            "match": "//.*"
        },
        {
            "name": "variable.name",
            "match": "\".*\"(?=:)"
        },
        {
            "name": "string",
            "match": "(?<=:)\\s\".*\""
        },
        {
            "name": "constant.numeric",
            "match": "(?<=:)\\s*[0-9]+"
        },
        {
            "name": "keyword",
            "match": "\\$\\.[A-Za-z0-9.]+"
        }
    ]
    
}