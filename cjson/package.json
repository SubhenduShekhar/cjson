{
  "name": "cjson",
  "displayName": "cjson",
  "description": "CJSON(Coded JSON) Extension Support",
  "author": {
    "name": "Shubhendu Shekhar Gupta",
    "email": "subhendushekhargupta@gmail.com",
    "url": "https://github.com/SubhenduShekhar"
  },
  "repository": {
    "url": "https://github.com/SubhenduShekhar/cjson/tree/vscode-extn",
    "type": "git"
  },
  "publisher": "ShubhenduShekharGupta",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cjson.deseralizeAndPreview",
        "title": "Deserialize And Preview"
      }
    ],
    "languages": [
      {
        "id": "cjson",
        "extensions": [
          ".cjson"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "dark": "dist/icons/icon.png",
          "light": "dist/icons/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "cjson",
        "scopeName": "source.cjson",
        "path": "./syntaxes/cjson.tmLanguage.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .cjson",
          "command": "cjson.deseralizeAndPreview",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceExtname == .cjson",
          "command": "cjson.deseralizeAndPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "coded-json": "^2.1.0"
  }
}
